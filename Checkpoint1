void setup() {
    pinMode(13,OUTPUT);
    Serial.begin(9600);
    Serial.println("Hello");
    Serial.print("\tLED PIN IS : 13");
    
    Serial.print("\nBYE!");
  }
  void loop()
  {
    char val;
    if(Serial.available())
    {
      val = Serial.read();
      switch(val)
      {
        
        case'0':
        digitalWrite(13,LOW);
        Serial.println("LED OFF");
        break;
        case'1':
        digitalWrite(13,HIGH);
        Serial.println("LED ON");
      }
    }
  }
